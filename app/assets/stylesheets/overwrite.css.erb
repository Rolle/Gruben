#map {
    width: 100%;
    height: 100%;
    min-height: 100%;
    display: block;
}

html, body {
    height: 100%;
}
body { padding-top: 60px; }

.fill { 
    min-height: 100%;
    height: 100%;
}


.leaflet-control-zoom-fullscreen { background-image: url(<%= asset_path 'icon-fullscreen.png' %>); }

.scrollup{
    width:40px;
    height:40px;
    opacity:0.3;
    position:fixed;
    bottom:30px;
    right:30px;
    display:none;
    text-indent:-9999px;
    background: url(<%= asset_path 'icon_top.png' %>);
}

