<%= tinymce_assets %>
<div class="well">
	<% if flash[:notice] %>
		<div class="alert alert-success">
  			<button type="button" class="close" data-dismiss="alert">&times;</button>
  			<strong>Info</strong> <%= flash[:notice] %>
		</div>
    <% end %>
    <% if flash[:error] %>
    		<div class="alert">
  			<button type="button" class="close" data-dismiss="alert">&times;</button>
  			<strong>Info</strong> <%= flash[:notice] %>
		</div>
    <% end %>
    
	<%= form_for(@adit) do |f| %>
	  	<div class="form-group">
	    	<%= f.label "Name der Grube:", :class => "control-label" %>
	    	<div class="controls">
	      		<%= f.text_field :name, {:class=>"input-small form-control"} %>
	    	</div>
	  	</div>

	  	<div class="from-group">
	    	<%= f.label "Beschreibung:", :class => "control-label" %>
	    	<div class="controls">
	      		<%= text_area_tag :description, "", :class => "tinymce form-control", :rows => 40, :cols => 70 %>
	    	</div>
	  	</div>

	  	<div class="form-group">
	    	<%= f.label "Besitzer:", :class => "control-label" %>
	    	<div class="controls">
	      		<%= f.text_field :owner, {:class=>"input-small form-control"} %>
	    	</div>
	  	</div>

		<div class="form-group">
	    	<%= f.submit "Speichern", :class=>"btn btn-primary" %>
	  	</div>
	  	
	<% end %>
</div>
<%= tinymce %>