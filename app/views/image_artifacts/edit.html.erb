<%= tinymce_assets %>
<div class="well well-small">
	<% if flash[:notice] %>
		<div class="alert alert-success">
  			<button type="button" class="close" data-dismiss="alert">&times;</button>
  			<strong>Info</strong> <%= flash[:notice] %>
		</div>
    <% end %>
    <% if flash[:error] %>
    		<div class="alert">
  			<button type="button" class="close" data-dismiss="alert">&times;</button>
  			<strong>Fehler</strong> <%= flash[:notice] %>
		</div>
    <% end %>
    <a id="<%= @image.id.to_s %>" class="fancybox" rel="popover" href="<%= @image.image.url %>" class="thumbnail" data-placement="bottom" data-trigger="hover" data-content="<%= @image.description %>">
	      			<img  src="<%= @image.image.url(:thumb) %>" data-src="<%= @image.image.url(:thumb) %>" alt="" style="width: 244px; height: 200px;">
	    		</a>
	<%= form_for(@image) do |f| %>
	  	<div class="form-group">
	    	<%= f.label "Grube:", :class => "form-label" %>
	    	<div class="controls">
	      		<%= f.select :adit_id, options_from_collection_for_select(@adits, "id", "name",6), :class => "input-xlarge form-control" %>
	    	</div>
	  	</div>
	  	
	  	<div class="form-group">
	    	<%= f.label "Beschreibung:", :class => "form-label" %>
	    	<div class="controls">
	      		<%= text_area_tag :description, "", :class => "tinymce form-control", :rows => 10, :cols => 20 %>
	    	</div>
	  	</div>

		<div class="form-group">
	    	<%= f.submit "Speichern", :class=>"btn btn-primary" %>
	  	</div>
	  	
	<% end %>
</div>
<%= tinymce %>
<script type="text/javascript">
	$(document).ready(function () {
  		$(function () {
    		$("a[rel=popover]").popover({live: true });
    		$("a[rel=popover]").fancybox();
  		});
	});
</script>